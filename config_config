# WiFi 6E & AX3600 (Required for ath11k driver on IPQ807x/SDX62)
CONFIG_PACKAGE_kmod-ath11k=y
CONFIG_PACKAGE_kmod-ath11k-firmware=y
CONFIG_PACKAGE_kmod-cfg80211=y

# LTE/5G modem support (Required for QMI/Qualcomm modems)
# Supports 5G/4G/3G connectivity
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-serial-qualcomm=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_uqmi=y # ⬅️ اضافه شده: ابزار حیاتی برای مدیریت مودم‌های QMI

# VPN & tunneling
CONFIG_PACKAGE_kmod-wireguard=y
CONFIG_PACKAGE_wireguard-tools=y
CONFIG_PACKAGE_openvpn-openssl=y

# QoS & ping optimization
CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_tc=y
CONFIG_PACKAGE_iptables-mod-ipopt=y

# LuCI minimal (User friendly web interface)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-proto-qmi=y # ⬅️ اضافه شده: رابط LuCI برای تنظیمات مودم QMI

# Monitoring tools
CONFIG_PACKAGE_iftop=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_screen=y

# Optional: LCD & GPIO (فعال شد)
